{
  "extends": "@tsconfig/node21/tsconfig.json",
  "compilerOptions": {
    "preserveConstEnums": true,
    "strict": false,
    "strictNullChecks": false,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowJs": true,
    "target": "ESNext",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["**/*.spec.ts"]
}